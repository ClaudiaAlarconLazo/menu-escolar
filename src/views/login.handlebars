<div class="container pt-5">
  <div class="row">
    <div class="col-5 border border-dark p-5">
      <h3>Login</h3>
      <form id="login-form">
        <div class="mb-3">
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            placeholder="email"
            value="claudia@mail.cl"
          />
        </div>
        <div class="mb-3">
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            placeholder="password"
            value="1234"
          />
        </div>
        <button type="button" onclick="login(event)" class="btn btn-primary">Enviar</button>
      </form>
    </div>
    <div class="col-2"></div>
    <div class="col-5 border border-dark p-5">
      <h3>Register</h3>
      <form id="sign-up-form">
        <div class="mb-3">
          <input
            type="text"
            class="form-control"
            id="name-register"
            name="nameRegister"
            placeholder="nombre"
            value="claudia"
          />
        </div>
        <div class="mb-3">
          <input
            type="email"
            class="form-control"
            id="email-register"
            name="emailRegister"
            placeholder="email"
            value="claudia@mail.cl"
          />
        </div>
        <div class="mb-3">
          <input
            type="password"
            class="form-control"
            id="password-register"
            name="passwordRegister"
            placeholder="password"
            value="1234"
          />
        </div>
        <div class="mb-3">
          <input
            type="password"
            class="form-control"
            id="confirmRegister"
            name="confirmRegister"
            placeholder="confirm"
            value="1234"
          />
        </div>
        <button type="button" onclick="signUp(event)" class="btn btn-primary">Enviar</button>
      </form>
    </div>
  </div>
</div>